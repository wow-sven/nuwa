{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src", "<rootDir>/test"],
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", {
      "tsconfig": "tsconfig.json",
      "useESM": true
    }]
  },
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageReporters": ["text-summary"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/types.ts",
    "!src/**/index.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 0,
      "functions": 0,
      "lines": 0,
      "statements": 0
    }
  },
  "setupFiles": ["<rootDir>/test/setup.js"],
  "reporters": [
    ["default", {
      "summaryThreshold": 1,
      "verbose": false
    }]
  ],
  "maxConcurrency": 1,
  "maxWorkers": 1,
  "silent": false,
  "extensionsToTreatAsEsm": [".ts"],
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  }
}
