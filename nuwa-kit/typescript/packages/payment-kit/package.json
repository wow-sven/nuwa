{
  "name": "@nuwa-ai/payment-kit",
  "version": "0.1.0",
  "description": "SDK for NIP-4 Unidirectional Payment Channels on Rooch and other ledgers",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "jest --config=jest.config.json",
    "test:coverage": "jest --config=jest.config.json --coverage",
    "test:watch": "jest --config=jest.config.json --watch",
    "test:integration": "jest --config=jest.config.json --testPathPattern=integration",
    "test:e2e": "jest --config=jest.config.e2e.ts --runInBand",
    "test:e2e:local": "ROOCH_NODE_URL=http://localhost:6767 PAYMENT_E2E=1 jest --config=jest.config.e2e.ts --runInBand",
    "test:e2e:debug": "ROOCH_NODE_URL=http://localhost:6767 PAYMENT_E2E=1 DEBUG_E2E=1 jest --config=jest.config.e2e.ts --runInBand --verbose",
    "test:e2e:verify": "ts-node --esm test/e2e/verify-setup.ts",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"**/__tests__/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"**/__tests__/**/*.ts\"",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "payment-channel",
    "nip-4",
    "rooch",
    "blockchain",
    "micropayments",
    "subrav",
    "nuwa",
    "did"
  ],
  "author": "Nuwa Community",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuwa-protocol/nuwa.git",
    "directory": "nuwa-kit/typescript/packages/payment-kit"
  },
  "bugs": {
    "url": "https://github.com/nuwa-protocol/nuwa/issues"
  },
  "homepage": "https://github.com/nuwa-protocol/nuwa/tree/main/nuwa-kit/typescript/packages/payment-kit#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "29.1.1",
    "ts-node": "^10.9.0",
    "tsup": "^8.2.3",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@nuwa-ai/identity-kit": "workspace:*",
    "@roochnetwork/rooch-sdk": "^0.3.6",
    "@types/js-yaml": "^4.0.9",
    "@types/pg": "^8.15.4",
    "js-yaml": "^4.1.0",
    "pg": "^8.16.3"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}